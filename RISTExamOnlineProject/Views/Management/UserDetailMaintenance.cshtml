
@{
    ViewData["Title"] = "UserDetailMaintenance";
    Layout = "_Layout";
}


<h5 class="mb-0"><strong>User profile</strong></h5>
<span class="text-secondary">Employee Management <i class="fa fa-angle-right"></i> User profile</span>

<div class="row mt-3">
    <div class="col-sm-12">
        <!--User profile header-->
        <div class="mt-1 mb-3 button-container bg-white border shadow-sm">
            <div class="profile-bg p-5">
                <img src="~/lib/img/avatar1.png" height="125px" width="125px" class="rounded-circle shadow profile-img" />
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-5 offset-md-3 col-sm-12 offset-sm-0 col-12 bio-header">
                        <h3 class="mt-4">Wittaya Suttisak</h3>
                        <span class="text-muted mt-0">System Development 2</span>
                    </div>
                    <div class="col-md-4 col-sm-2 col-12 px-5 text-right pt-4 bio-comment">
                        <div class="container">
                            <div class="col-sm-12">
                                <form action="" class="mb-4">
                                    <div class="input-group mt-2">
                                        @Html.TextBox("strOPNo", null, new { @class = "form-control shadow-sm", placeholder = "Search Staff Code..", id = "strOPNo" })

                                        <div class="input-group-append">
                                            @*<button class="btn btn-theme" type="submit" id="button-addon2" formaction="@Url.Action("UserDetailMaintenance")">Search</button>*@

                                            <button class="btn btn-theme" type="button" onclick="GetuserDetail()"  id="btnSearch">Search1</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--/User profile header-->
    </div>

</div>
<nav class="navbar navbar-expand-sm bg-dark text-white  navbar-dark mb-1">
    <ul class="navbar-nav">
        <li class="nav-item mr-1">
            <a href="@Url.Action("UserDetailMaintenance")?Event=Info" class="btn btn-dark  nav-link">
                <i class="fas fa-info-circle mr-0"></i>
                <span class=" ">info</span>
            </a>
        </li>
        <li class="nav-item mr-1">
            <a href="@Url.Action("UserDetailMaintenance")?Event=Info" class="btn btn-dark  nav-link">
                <i class="fa fa-user-alt mr-3"></i>
                <span class=" ">User detail</span>
            </a>
        </li>
        <li class="nav-item mr-1">
            <a href="@Url.Action("UserDetailMaintenance")?Event=Info" class="btn btn-dark  nav-link">
                <i class="fas fa-magic mr-3"></i>
                <span class=" ">License Manager</span>
            </a>
        </li>
        <li class="nav-item mr-1">
            <a href="@Url.Action("UserDetailMaintenance")?Event=ADDDe" class="btn btn-dark  nav-link">
                <i class="fas fa-edit mr-3"></i>
                <span class=" ">Addition Department</span>
            </a>
        </li>
        <li class="nav-item mr-1">
            <a href="@Url.Action("UserDetailMaintenance")?Event=Info" class="btn btn-dark  nav-link">
                <i class="fas fa-edit mr-3"></i>
                <span class=" ">Training records</span>
            </a>
        </li>
    </ul>
</nav>

<div class="form-row ">
    <div class="col">


        @{
            if (@ViewBag.Event == "CancelInquiry")
            {
                @await Html.PartialAsync("/Views/Shared/_partsUserManage/_partsUserDetail.cshtml")
            }
            else if (@ViewBag.Event == "ADDDe")
            {
                @await Html.PartialAsync("/Views/Shared/_partsUserManage/_partsAdditional.cshtml")
            }
            else
            {
                @await Html.PartialAsync("/Views/Shared/_partsUserManage/_partsUserDetail.cshtml")
            }
        }
    </div>
</div>


@section scripts{

<script src="~/lib/CustomJS/ScriptUserManage/UserManagemant.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            Getinitial();
        });

    </script>
}
