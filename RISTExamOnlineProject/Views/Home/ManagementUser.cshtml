                            <option>Choose ...</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label for="Shift" class="mb-0">Shift</label>
                        <select class="form-control" id="Shift">
                            <option>Choose ...</option>
                            <option>1.A-Shift</option>
