        function Profile() {

            $.ajax({
                type: 'POST',
                url: "../Home/Profile",
                   data: { OPID: "@User.Identity.Name" },
                dataType: 'json',
                success: function (Data) {

                    $(".profiles").attr("src", Data.data);/*text(Data.data);*/
                    $("#strName").text(Data.strName);
                    $("#strJobTitle").text(Data.strJobTitle);
                },
                error: function (ex) {
