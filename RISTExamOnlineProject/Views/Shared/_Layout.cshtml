                                {
                                    userRoles = "Admin";
                                }
                                else
                                {
                                    userRoles = "User";
                                }

                                @if (userRoles == "Admin")
                                {

                                    <li class="parent">
                                        <a href="#" onclick="toggle_menu('Shortcuts');return false;">
                                            <i class="fas fa-link mr-3"></i>
                                            <span class="none">User Managemant <i class="fa fa-angle-down pull-right align-bottom"></i></span>
                                        </a>

                                        @{
                                            var opno = @User.Identity.Name;

                                            //var positionlist = ViewBag.Positionlist;

                            }
