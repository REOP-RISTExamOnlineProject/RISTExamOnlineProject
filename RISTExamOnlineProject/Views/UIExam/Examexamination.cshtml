                               strTitle = "PASS <i class='fas fa-thumbs-up'></i>";
                               strText = "congratulation!! :>";
                               strCateg = "success";
                           } else { 
                               strTitle = "FAIL <i class='fas fa-thumbs-down'></i>";
                               strText = "Please context to TEC ";
                               strCateg = "error";
                           }
                       } else {
                           debugger
