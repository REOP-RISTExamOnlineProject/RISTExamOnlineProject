                          type: strCateg,
                          //timer: 1700,
                      }).then(function () {
                          return true;
                      });
                  },
                  error: function (ex) {

                  },
                });


        }

        $(document).on('fullscreenchange webkitfullscreenchange mozfullscreenchange MSFullscreenChange', function () {
            if (IsFullScreenCurrently()) {
                return false;
            }
            else {
               
                clearInterval(x);
                alert('The exam is over'); 
                $("#DivContents").html("<div class='text-center m-4'><H1 class='text-danger'>TEST END</H1><H1 class='text-danger'><i class='fas fa-check-circle'></i></H1> <br/> <a href='@Url.Action("LicenceList")' class='btn  btn-link'> MainMenu</a></div>" );
                $("#ftExam").css("display", "none");
